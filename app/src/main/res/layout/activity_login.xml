<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity">

    <View
            android:layout_width="360dp"
            android:layout_height="640dp"
            android:id="@+id/view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:layout_width="296dp"
            android:layout_height="251dp"
            android:id="@+id/view2"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toTopOf="@+id/view3"/>
    <View
            android:layout_width="296dp"
            android:layout_height="68dp"
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:layout_width="296dp"
            android:layout_height="68dp"
            android:id="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintBottom_toTopOf="@+id/view5"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <View
            android:layout_width="148dp"
            android:layout_height="253dp"
            android:id="@+id/view5"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@+id/view6"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <View
            android:layout_width="148dp"
            android:layout_height="253dp"
            android:id="@+id/view6"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintStart_toEndOf="@+id/view5"
            app:layout_constraintEnd_toEndOf="@+id/view"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"/>
    <TextView
            android:text="@string/w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/w"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            android:textSize="76sp"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintBottom_toBottomOf="@+id/view2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_size_14"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#999999"
            android:lineSpacingExtra="0sp"
            android:text="@string/e_mail_address"
            android:id="@+id/e_mail_address"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toTopOf="@+id/view3"
            app:layout_constraintBottom_toTopOf="@id/editText"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text_size_14"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#999999"
            android:lineSpacingExtra="0sp"
            android:text="@string/password"
            android:id="@+id/password"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintBottom_toTopOf="@id/editText2"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:text="@string/alvinarm_gmail_com"
            app:layout_constraintStart_toStartOf="@+id/view3"
            app:layout_constraintTop_toBottomOf="@+id/e_mail_address"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/view3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            android:textSize="@dimen/text_size_16"
            android:text="@string/password_not_visible"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/password"/>
    <Button
            android:text="@string/login"
            android:layout_width="@dimen/size_120"
            android:layout_height="@dimen/size_36"
            android:id="@+id/login"
            android:background="@color/colorLogin"
            app:layout_constraintStart_toStartOf="@+id/view5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/view5"/>
    <TextView
            android:text="@string/signup"
            android:layout_width="@dimen/size_120"
            android:layout_height="@dimen/size_36"
            android:id="@+id/signup"
            android:layout_marginTop="16dp"
            android:background="@color/colorWhite"
            app:layout_constraintTop_toTopOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/view6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"

    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_view"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintTop_toTopOf="@+id/editText2"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText2"
    />

</androidx.constraintlayout.widget.ConstraintLayout>