<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="team.androidgirls.kz.ui.login.LoginPage">

   <LinearLayout
   android:id="@+id/ll_main_layout"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:gravity="left"
   android:background="@android:color/white"
   android:paddingTop="150dp"
   android:paddingLeft="32dp"
   android:paddingRight="32dp"
   android:orientation="vertical"
   android:theme="@style/NoActionBar">
      <ImageView android:layout_width="108dp"
                 android:layout_height="108dp"
                 android:layout_gravity="center"
      android:src="@drawable/w"/>
   <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingTop="41dp"
           android:textSize="12dp"
           android:textColor="@color/colorAccent"
           android:text="E-mail address"/>
   <EditText
           android:id="@+id/et_user_name"
           android:hint="User Name"
           android:paddingTop="8dp"
           android:textSize="16sp"
           android:textColor="@color/colorAccent"
           android:textColorHint="@color/colorAccent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
      <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="24dp"
              android:textSize="12dp"
              android:textColor="@color/colorAccent"
              android:text="Password"/>
   <EditText
           android:id="@+id/et_password"
           android:hint="Password"
           android:textSize="16sp"
           android:textColor="@color/colorAccent"
           android:textColorHint="@color/colorAccent"
           android:inputType="textPassword"
           android:layout_width="match_parent"
           android:drawableRight="@drawable/eye"
           android:drawablePadding="8dp"
           android:layout_height="wrap_content"/>
      <LinearLayout
              android:layout_width="347dp"
              android:layout_height="wrap_content"
              android:paddingTop="24.5dp"
              android:orientation="horizontal">
         <Button
                 android:id="@+id/btn_reset"
                 android:text="LOG IN"
                 android:textAllCaps="false"
                 android:layout_width="120dp"
                 android:layout_height="36dp"
                 android:background="#2297f3"
         />
         <LinearLayout android:layout_width="224dp" android:layout_height="35dp"
                       android:paddingLeft="81.5dp">
            <Button
                    android:id="@+id/btn_submit"
                    android:text="SIGN UP"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:layout_width="91.5dp"
                    android:layout_height="24dp"
                    android:background="@color/colorPrimary"/>
         </LinearLayout>
      </LinearLayout>
</LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>